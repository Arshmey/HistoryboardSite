@{
    ViewBag.Title = "Создание истории";
}

<div class="scrollable-container shadow-sm" style="max-width: auto; margin: 20px auto;">
    <div style="padding: 20px; background: #f5f5f5; border-radius: 8px;">
        <!-- Форма отправки -->
        <div style="background: white; padding: 50px; border-radius: 5px; box-shadow: 0 2px 4px rgb(0,0,0); margin-bottom: 10px;">
            @using (Html.BeginForm("CreateMessage", "Message", FormMethod.Post))
            {
                <h3 style="color: #2c3e50; margin-top: 0; margin-bottom: 15px;">Новая история</h3>

                <div style="margin-bottom: 15px;">
                    <input type="text" name="Title" placeholder="Заголовок"
                           style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box;" required />
                </div>

                <div style="margin-bottom: 15px;">
                    <textarea name="Content" placeholder="Текст вашей истории..."
                        style="width: 100%; height: 150px; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; resize: none;" required></textarea>
                </div>

                <button type="submit" style="padding: 10px 20px; background: #d8d8d8; border: none; border-radius: 4px; color: black;
                    cursor: pointer; transition: background 0.3s;">Опубликовать историю</button>
            }
        </div>
    </div>
</div>